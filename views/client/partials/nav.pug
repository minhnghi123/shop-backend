include ../mixins/sub-category
//  Navbar Start 
.container-fluid.bg-dark.mb-30
  .row.px-xl-5
    .col-lg-3.d-none.d-lg-block
      a.btn.d-flex.align-items-center.justify-content-between.bg-primary.w-100(data-toggle="collapse", href="#navbar-vertical", style="height: 65px; padding: 0 30px")
        h6.text-dark.m-0
          i.fa.fa-bars.mr-2
          | Danh Mục

        i.fa.fa-angle-down.text-dark
      nav.collapse.position-absolute.navbar.navbar-vertical.navbar-light.align-items-start.p-0.bg-light#navbar-vertical(style="width: calc(100% - 30px); z-index: 999")
        .navbar-nav.w-100
          .nav-item.dropdown.dropright
            +sub-category(allCategory)  
    .col-lg-9
      nav.navbar.navbar-expand-lg.bg-dark.navbar-dark.py-3.py-lg-0.px-0
        a.text-decoration-none.d-block.d-lg-none(href="/")
          span.h1.text-uppercase.text-dark.bg-light.px-2 Shop
          span.h1.text-uppercase.text-light.bg-primary.px-2.ml-n1 Online
        button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarCollapse")
          span.navbar-toggler-icon
        .collapse.navbar-collapse.justify-content-between#navbarCollapse
          .navbar-nav.mr-auto.py-0
            a.nav-item.nav-link.active(href="/") Trang chủ
            a.nav-item.nav-link(href="/products") Sản phẩm
            a.nav-item.nav-link(href="/contact") Liên hệ
            a.nav-item.nav-link(href="/announcement") Thông báo
          .navbar-nav.ml-auto.py-0.d-none.d-lg-block
            a.btn.px-0(href)
              i.fas.fa-heart.text-primary
              span.badge.text-secondary.border.border-secondary.rounded-circle(style="padding-bottom: 2px") 0
            a.btn.px-0.ml-3(href="/cart")
              i.fas.fa-shopping-cart.text-primary
              span.badge.text-secondary.border.border-secondary.rounded-circle(style="padding-bottom: 2px") #{miniCart} 
//  Navbar End 