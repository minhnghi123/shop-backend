    script(src="/lib/easing/easing.min.js")
    script(src="/lib/owlcarousel/owl.carousel.min.js")

    script(src="/mail/jqBootstrapValidation.min.js")
    script(src="/mail/contact.js")

    script(src="/js/main.js")