extends ../../layouts/userDefault.pug
block main
 .row
  .col-md-6
    .card-body.px-lg-5.pt-0
      h2.h1.my-5(style="font-weight: 800; font-family:sans-serif") #{pageTitle}
      form.text-center(action="/user/register" method="post")
        .md-form.my-5
          input#materialRegisterFormName.form-control(type="text",name="username", required)
          label(for="materialRegisterFormName") Họ và tên
        .md-form.my-5
          input#email.form-control(type="email",name="email", required)
          label(for="email") Email
        //  Password 
        .md-form.my-5
          input#materialRegisterFormPassword.form-control(type="password",name="password", aria-describedby="materialRegisterFormPasswordHelpBlock", required)
          label(for="materialRegisterFormPassword") Mật khẩu
        .md-form.my-5
          input#rePassword.form-control(type="password",name="rePassword", aria-describedby="materialRegisterFormPasswordHelpBlock", required)
          label(for="rePassword") Nhập lại mật khẩu
        .md-form.my-5
          input#SDT.form-control(type="text",name="phone" , required)
          label(for="SDT") Số điện thoại
        //  Sign up button 
        button.btn.btn-primary.btn-rounded.btn-block.waves-effect.z-depth-0(type="submit") Đăng ký
 
  .col-md-6.px-0
    img(src="https://res.cloudinary.com/dabykheek/image/upload/v1633553639/media/images/paul-gilmore-ysA6qL8j-OI-unsplash_pjweno.jpg", alt, width="100%", height="auto")
