extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .product-detail
    .container.my-5
      .row
        .col-md-6
          .inner-thumb
            img(src=product.thumbnail, alt=product.title, class="img-fluid rounded")
        .col-md-6
          h1(class="inner-title text-primary") #{product.title}

          if (product.category)
            div(class="inner-category mb-2")
              span.text-muted Danh mục: 
              a(href=`/products/${product.category.slug}`, class="text-decoration-none text-dark") #{product.category.title}

          if (product.priceNew)
            div(class="inner-price-new text-danger h4") Giá: #{product.priceNew}$

          if (product.price)
         
          div(class="inner-price-old text-muted text-decoration-line-through")   
            <i>#{product.price}$

          if (product.discountPercentage)
            div(class="inner-percent text-success mb-2") 
              span Giảm tới #{product.discountPercentage}%

          if (product.stock)
            div(class="inner-stock text-secondary") Còn lại <span class="font-weight-bold">#{product.stock}</span> sản phẩm

          form(
            action=`/cart/add/${product.id}`
            method="POST"
            class="mt-3"
          )
            input(
              class="form-control mb-2"
              type="number"
              name="quantity"
              value="1"
              min="1"
              max=product.stock
            )
            button(
              type="submit"
              class="btn btn-success btn-block"
            ) Thêm vào giỏ hàng

    hr

    .container.my-5
      .row
        .col-12
          +box-head("Mô tả sản phẩm")
          .inner-desc
            p !{product.description}
