extends ../../layouts/cartDefault.pug
block main

 .container-fluid
  .row.px-xl-5
    .col-lg-8
      h5.section-title.position-relative.text-uppercase.mb-3
        span.bg-secondary.pr-3 Thông tin đặt hàng
      .bg-light.p-30.mb-5
       form(action="/order" method="post")
        .row
          .col-md-6.form-group
            label Họ và tên
            input.form-control(name="username" type="text", placeholder="Nguyễn Văn A" required)
          .col-md-6.form-group
            label E-mail
            input.form-control(name="email" type="text", placeholder="example@email.com" required)
          .col-md-6.form-group
            label Số điện thoại
            input.form-control(name="SDT" type="text", placeholder="0123xxxxxx" required)
          .col-md-6.form-group
            label Địa chỉ
            input.form-control(name="address" type="text", placeholder="Quận 11 ..." required)
          .col-md-6.form-group
            label Hình thức thanh toán :
            br
            input(id="direct" type="radio", name="payment", value="tructiep" required)
            label(class="ml-2" for="direct") Trực tiếp
            br
            input( id ="banking" type="radio", name="payment", value="chuyenkhoan" required)
            label(class="ml-2" for="banking") Chuyển khoản
        .mb-5
            button.btn.btn-block.btn-primary.font-weight-bold.py-3 Xác nhận đặt hàng
    .col-lg-4
      h5.section-title.position-relative.text-uppercase.mb-3
        span.bg-secondary.pr-3 Đơn hàng
      .bg-light.p-30.mb-5
        .border-bottom
          h6.mb-3 Sản phẩm
          each product in products
            .d-flex.justify-content-between
                p #{product.title} (x#{product.quantity})
                p #{product.total.toLocaleString()}
        .border-bottom.pt-3.pb-2
          .d-flex.justify-content-between.mb-3
            h6 Tổng giá
            h6 $#{total.toLocaleString()}
          .d-flex.justify-content-between
            h6.font-weight-medium Shipping
            h6.font-weight-medium Free ship
        .pt-2
          .d-flex.justify-content-between.mt-2
            h5 Tổng giá
            h5 $#{total.toLocaleString()}
      
